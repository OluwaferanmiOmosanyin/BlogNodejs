<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>


    <div class="blogs content">
        <h2>All blogs</h2>

        <% if(blogs.length >0){ %>
            <% blogs.forEach(blog =>{ %>
               <a href="/blogs/<%= blog._id %>" class="single">
                <h3><%= blog.title %></h3>
                <p><%=blog.snippet %></p>
               </a> 
                

           <% }) %>
       <% } else{ %>
        <p>Theres no blog to display</p>

      <% } %>

      
      <%- include("./partials/footer.ejs") %>
    </div>
</body>
</html>